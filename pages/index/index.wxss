/* pages/index/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
  /* 移除左右padding，让背景色延伸到边缘 */
  box-sizing: border-box;
  min-height: 100vh;
  max-height: 100vh;
  background-color: #ffffff;
  position: relative;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-info {
  display: flex;
  align-items: center;
}

.location-icon {
  margin-left: 70rpx;
  width: 60rpx;
  height: 60rpx;
}

.location-name {
  font-size: 28rpx;
  color: #333;
}

.main-title {
  display: flex;
  font-size: 36rpx;
  color: #333;
  margin-left: 80rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.health-tips {
  width: calc(100% - 120rpx);
  /* 减去左右padding */
  background-color: #FFF5E6;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx auto;
  position: relative;
  z-index: 2;
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #F55A00;
  margin-bottom: 10rpx;
  display: block;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.recommendation-options {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.picker {
  background-color: #fff;
  border: 2rpx solid #ff8c00;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #333;
}

.recommend-button {
  width: 200rpx;
  height: 80rpx;
  background-color: #FF8C00;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx auto;
  box-shadow: 0 4rpx 8rpx rgba(255, 140, 0, 0.2);
  transition: all 0.3s ease;
}

.recommend-text {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.recommend-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(255, 140, 0, 0.1);
}

@keyframes bounce {

  0%,
  100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.05);
  }
}

.recommend-button:hover {
  animation: bounce 0.3s ease;
}

.recommendation-results {
  width: 100%;
  height: 700rpx;
  /* 增加高度 */
  background-color: #ffffff;
  padding: 20rpx 0;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.recommendation-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-left: 70rpx;
  margin-top: 20rpx;
  margin-bottom: -20rpx;
}

.results-scroll {
  height: calc(100% - 52rpx);
  /* 减去标题的高度 */
}

.results-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-item {
  width: 80%;
  background-color: #F7F8FC;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-image {
  width: 120rpx;
  /* 调整图片宽度 */
  height: 120rpx;
  /* 调整图片高度 */
  border-radius: 8rpx;
  margin-right: 15rpx;
  /* 添加右边距 */
}

.result-info {
  flex: 1;
  /* 让信息占据剩余空间 */
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
}

.result-tag {
  font-size: 20rpx;
  color: #128FAE;
  margin-bottom: 5rpx;
}

.result-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1F222B;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.result-distance {
  font-size: 22rpx;
  color: #B6B9C2;
}

.refresh-tip {
  background-color: #F55A00;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.search-bar {
  width: 85%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-input-container {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.filter-button {
  width: 70rpx;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 1000;
}

.filter-popup.show {
  transform: translateY(0);
}

.filter-content {
  padding: 40rpx;
}

.filter-option {
  margin-bottom: 40rpx;
}

.filter-option text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.picker {
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}

.confirm-button {
  width: 100%;
  height: 70rpx;
  background-color: #F55A00;
  color: #fff;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.count-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.count-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  background-color: #fff;
  color: #333;
  border: 2rpx solid #F55A00;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count-button.selected {
  background-color: #fff;
  color: #F55A00;
  border: 2rpx solid #F55A00;
  font-weight: bold;
}

.popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f9f9f9;
  /* 弹出层背景色 */
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 1000;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.1);
  /* 添加顶部阴影 */
}

.popup.show {
  transform: translateY(0);
}

.popup-content {
  padding: 40rpx;
  background-color: #f9f9f9;
  /* 确保内容区域也是相同的背景色 */
}

.popup-option {
  margin-bottom: 30rpx;
}

.popup-option text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.count-buttons,
.category-buttons {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.count-button,
.category-button {
  flex: 0 0 30%;
  margin: 5rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  /* 浅灰色背景 */
  color: #666;
  /* 深灰色字体 */
  border: 2rpx solid #e0e0e0;
  /* 浅灰色边框 */
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.count-button.selected,
.category-button.selected {
  background-color: #FFF5E6;
  /* 浅橙色背景 */
  color: #F55A00;
  /* 橙色字体 */
  border: 2rpx solid #F55A00;
  /* 橙色边框 */
  font-weight: bold;
}

.confirm-button {
  width: 100%;
  height: 70rpx;
  background-color: #F55A00;
  color: #fff;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.popup-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup-reset {
  font-size: 28rpx;
  color: #F55A00;
}

.search-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  z-index: 1;
}

.recommend-card {
  width: 75%;  /* 稍微减小宽度 */
  height: 110rpx;  /* 减小高度 */
  background: linear-gradient(135deg, #FFE4B5, #FFA07A);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  margin: 25rpx auto;
  padding: 12rpx 15rpx;  /* 减小内边距 */
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.recommend-content {
  display: flex;
  align-items: center;
  z-index: 2;
  width: 100%;
}

.recommend-icon {
  width: 60rpx;  /* 减小图标大小 */
  height: 60rpx;
  margin-right: 12rpx;  /* 减小右边距 */
  flex-shrink: 0;
}

.recommend-text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.recommend-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: bold;
  margin-bottom: 2rpx;
}

.recommend-description {
  font-size: 20rpx;  /* 减小字体大小 */
  color: #A0522D;
  opacity: 0.9;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-decoration {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, rgba(255,255,255,0) 70%);
  transform: rotate(45deg);
  z-index: 1;
}

.recommend-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(255, 165, 0, 0.2);
}

.recommend-card:active .recommend-decoration {
  transform: rotate(45deg) scale(1.1);
}

.recommend-embedded-icon {
  position: absolute;
  right: 00rpx;
  bottom: -20rpx;
  width: 150rpx;
  height: 150rpx;
  opacity: 0.3;
  transform: rotate(15deg);
  z-index: 1;
}

.recommend-content {
  /* 保持现有样式 */
  position: relative;
  z-index: 2;
}

/* 其他现有样式保持不变 */
