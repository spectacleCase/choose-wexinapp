  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend-content {
  display: flex;
  align-items: center;
  z-index: 2;
}

.recommend-text-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.recommend-embedded-icon {
  width: 160rpx; 
  height: 160rpx;
  opacity: 0.4;
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}

.recommendation-row {
  display: flex;
  justify-content: space-between;
  width: 90%;
