/* pages/shop/dishes/dishes.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.nav-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 1;
}

.nav {
  flex: 1;
  white-space: nowrap;
  overflow-x: auto;
}

.nav-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.nav-item.active {
  color: #ff6b00;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #ff6b00;
}

.nav-dropdown {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dropdown-icon {
  width: 40rpx;
  height: 40rpx;
}

.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.dish-details {
  margin-bottom: 40rpx;
}

.dish-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.dish-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.dish-tags {
  margin-bottom: 20rpx;
}

.tag {
  display: inline-block;
  background-color: #fff5e6;
  color: #ff6b00;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.dish-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.comments-section {
  padding-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.comment {
  display: flex;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.rating {
  color: #ff6b00;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
}

/* 在现有样式的基础上添加以下内容 */

.dropdown-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.dropdown-menu.visible {
  display: block;
}

.dropdown-overlay {
  width: 100%;
  height: 100%;
}

.dropdown-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  transform: translateY(-100%);
  transition: transform 0.3s ease-out;
}

.dropdown-menu.visible .dropdown-content {
  transform: translateY(0);
}

.dropdown-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.dropdown-list {
  max-height: 60vh;
  overflow-y: auto;
}

.dropdown-item {
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dropdown-item.active {
  color: #ff6b00;
  background-color: #fff5e6;
}
