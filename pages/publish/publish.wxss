/* pages/publish/publish.wxss */
page {
  background-color: #f8f8f8;
}

.container {
  padding: 30rpx;
}

.input {
  width: 100%;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  border: none;
  border-bottom: 1px solid #e0e0e0;
  background-color: transparent;
}

.dish-description {
  height: 120rpx;
}

.upload-image {
  width: 100%;
  min-height: 200rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
}

.upload-text {
  color: #999;
  font-size: 28rpx;
}

.picker {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-label {
  font-size: 28rpx;
  color: #333;
}

.picker-value {
  font-size: 28rpx;
  color: #999;
}

.tag-selector {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.tag-selector-text {
  font-size: 28rpx;
  color: #333;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.tag {
  background-color: #FFE4B5;
  color: #FF8C00;
  padding: 10rpx 20rpx;
  margin: 10rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.publish-btn {
  background-color: #FF8C00;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.tag-selector-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
  background-color: #fff;
  transition: height 0.3s;
  overflow: hidden;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.tag-selector-modal.show {
  height: 70%;
}

.tag-selector-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #e0e0e0;
}

.tag-selector-content {
  display: flex;
  flex: 1;
  overflow: hidden;
  position: relative;
}

.tag-selector-content::after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 10;
  left: 50%;
  width: 1px;
  background-color: #e0e0e0;
}

.tag-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.tag-item {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.tag-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.selected-tags-top {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.selected-tag {
  background-color: #FFE4B5;
  color: #FF8C00;
  padding: 10rpx 20rpx;
  margin: 10rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: inline-block;
}

.tag-selector-footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-top: 1px solid #e0e0e0;
}

.tag-selector-footer button {
  width: 45%;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #333;
}

.confirm-btn {
  background-color: #FF8C00;
  color: #fff;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.dish-name {
  flex: 1;
  margin-bottom: 0;
  margin-right: 20rpx;
}

.add-shop-btn {
  display: flex;
  align-items: center;
  background-color: #FF8C00;
  color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.add-text {
  white-space: nowrap;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.add-image {
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  color: #999;
  border-radius: 8rpx;
}
