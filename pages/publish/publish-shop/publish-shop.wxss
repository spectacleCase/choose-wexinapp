/* pages/publish/publish-shop/publish-shop.wxss */
page {
  background-color: #f8f8f8;
}

.container {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  border: none;
  border-bottom: 1px solid #e0e0e0;
  background-color: transparent;
}

.upload-image {
  width: 100%;
  background-color: #fff;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.upload-text {
  color: #999;
  font-size: 28rpx;
}

.image-list {
  display: flex;
  justify-content: space-between;
}

.image-item {
  width: 30%;
  height: 180rpx;
  position: relative;
}

.shop-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.add-image {
  width: 30%;
  height: 180rpx;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.location-picker {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location-label {
  font-size: 28rpx;
  color: #333;
}

.location-value {
  font-size: 28rpx;
  color: #999;
}

.publish-btn {
  background-color: #FF8C00;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  margin-top: 60rpx;
}
