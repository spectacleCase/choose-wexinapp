/* pages/my_page.wxss */

.user-page {
  background-color: #f8f9fa;
  min-height: 100vh;
  max-height: 100vh;
  padding: 40rpx 30rpx;
}

.user-info-card {
  background-color: #1c1c1e;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: visible;
  padding-right: 100rpx;
  z-index: 2;
}

.user-info-card::before {
  content: '';
  position: absolute;
  left: 20rpx;
  right: -20rpx; /* 向右延伸 */
  bottom: -15rpx;
  height: 100%;
  background-color: rgba(28, 28, 30, 0.7);
  border-radius: 20rpx;
  z-index: -1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info-card::after {
  content: '';
  position: absolute;
  left: -120rpx;
  top: -120rpx;
  width: 400rpx;
  height: 400rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0; /* 确保在主卡片内容下方 */
}

.user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
  margin-right: 30rpx;
  border: 4rpx solid #ffffff;
  position: relative;
  z-index: 3;
}

.user-details {
  flex: 1;
  z-index: 2;
  display: flex;
  flex-direction: column;
  position: relative;
}

.user-name {
  font-size: 40rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.user-signature {
  font-size: 26rpx;
  color: #FF8C00;
  margin-bottom: 15rpx;
  font-style: italic;
}

.user-tag-list {
  display: flex;
  flex-wrap: wrap;
}

.user-tag {
  background-color: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.user-decoration {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  z-index: 1;
}

.user-decoration-icon {
  position: absolute;
  opacity: 0.1;
}

.user-decoration-icon:nth-child(1) {
  width: 120rpx;
  height: 120rpx;
  top: -20rpx;
  right: -20rpx;
  transform: rotate(45deg);
}

.user-decoration-icon:nth-child(2) {
  width: 80rpx;
  height: 80rpx;
  bottom: -10rpx;
  left: 40%;
  transform: rotate(-30deg);
}

.user-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-section-title {
  font-size: 28rpx;
  color: #F55A00;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-more-link {
  font-size: 24rpx;
  color: #007aff;
}

.user-recommendation-list {
  height: 400rpx;
  overflow-y: auto;
}

.user-recommendation-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-recommendation-item:last-child {
  border-bottom: none;
}

.user-recommendation-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.user-recommendation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-recommendation-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.user-recommendation-tag {
  font-size: 24rpx;
  color: #007aff;
  margin-bottom: 6rpx;
}

.user-recommendation-distance {
  font-size: 24rpx;
  color: #999999;
}

.user-actions {
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.user-action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-action-item:last-child {
  border-bottom: none;
}

.user-action-item text {
  font-size: 28rpx;
  color: #333333;
}

.user-action-arrow {
  width: 32rpx;
  height: 32rpx;
}

.user-health-tip-section {
  background-color: #FFF5E6;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.user-health-tip {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

/* 添加一个微妙的渐变背景到页面 */
.user-page::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  z-index: -1;
}

/* 在 .user-tag 样式后添加 */
.user-signature {
  font-size: 24rpx;
  color: #FF8C00; /* 亮橙色 */
  margin-top: 10rpx;
  font-style: italic;
}

/* 在文件末尾添加以下样式 */

.personal-info-tag {
  position: absolute;
  top: 40rpx; /* 调整顶部位置 */
  right: -10rpx; /* 向右延伸一点 */
  background-color: #FF8C00;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 20rpx 8rpx 16rpx; /* 增加右侧内边距 */
  border-radius: 20rpx 0 0 20rpx; /* 只保留左侧圆角 */
  z-index: 3;
  box-shadow: -2rpx 2rpx 5rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
}

/* 添加一个伪元素来创建小三角 */
.personal-info-tag::after {
  content: '';
  position: absolute;
  right: 0;
  bottom: -10rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid #D67600; /* 深一点的橙色 */
  border-right: 10rpx solid transparent;
}

/* 调整用户信息卡片的样式 */
.user-info-card {
  padding-right: 100rpx; /* 减少右侧内边距 */
}

/* 在文件末尾添加以下样式 */
.bottom-image-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.bottom-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}
