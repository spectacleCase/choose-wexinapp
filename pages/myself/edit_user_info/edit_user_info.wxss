/* pages/myself/edit_user_info.wxss */.edit-user-info {
    padding: 30rpx;
    background-color: #fff;
    min-height: 100vh;
}

.avatar-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
    background-image: linear-gradient(120deg, rgba(246, 211, 101, 0.9) 0%, rgba(253, 160, 133, 0.9) 100%);
    background-size: cover, 200%;
    background-position: center, center;
    background-blend-mode: overlay;
    padding: 30rpx;
    border-radius: 20rpx;
    position: relative;
    overflow: hidden;
}

.avatar-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    filter: blur(10px);
    opacity: 0.3;
    z-index: -1;
}

.avatar {
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
    margin-bottom: 20rpx;
    border: 4rpx solid #FFFFFF;
    position: relative;
    z-index: 1;
}

.change-avatar-btn {
    font-size: 28rpx;
    color: #FFFFFF;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    position: relative;
    z-index: 1;
}

.info-item {
    margin-bottom: 30rpx;
    display: flex;
    align-items: center;
}

.label {
    width: 160rpx;
    font-size: 28rpx;
    color: #333;
    margin-right: 20rpx;
}

.input,
.textarea,
.radio-group {
    flex: 1;
    border: none;
    border-bottom: 1rpx solid #ddd;
    padding: 10rpx 0;
    font-size: 28rpx;
    color: #333;
}

.signature-item {
    flex-direction: column;
    align-items: flex-start;
}

.signature-item .label {
    margin-bottom: 10rpx;
}

.textarea {
    width: 100%;
    height: 100rpx;
}

.radio-group {
    display: flex;
    border-bottom: none;
}

.radio-group radio {
    margin-right: 30rpx;
}

.radio-group radio .wx-radio-input.wx-radio-input-checked {
    background-color: #FF8C00 !important;
    border-color: #FF8C00 !important;
}

.save-btn {
    margin-top: 40rpx;
    background-color: #FF8C00;
    color: #fff;
    border: none;
    border-radius: 40rpx;
    padding: 20rpx 0;
    font-size: 32rpx;
}

.save-btn:active {
    opacity: 0.8;
}
