.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

.card {
  background-color: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.project-name {
  text-align: left;
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF8C00;
}

.subtitle {
  font-size: 36rpx;
  font-weight: bold;
  color: #888;
  margin-bottom: 30rpx;
  display: block;
}

.content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 30rpx;
  text-indent: 2em; /* 添加首行缩进 */
}

.contributors {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.contributor {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.name {
  font-size: 28rpx;
  color: #888;
}
