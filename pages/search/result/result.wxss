.result-container {
    padding: 10px;
    background-color: #f9f9f9;
}

.search-bar {
    display: flex;
    margin-bottom: 10px;
}

.search-input {
    flex: 1;
    height: 30px;
    border: 1px solid #ff8c00;
    border-radius: 15px;
    padding: 0 10px;
    font-size: 14px;
}

.result-item {
    padding: 15px;
    border-bottom: 1px solid #e0e0e0;
    background-color: #fff;
    border-radius: 5px;
    margin-bottom: 15px;
    transition: background-color 0.3s;
}

.result-item:hover {
    background-color: #f0f0f0;
}

.shop-info {
    display: flex;
    margin-bottom: 10px;
}

.shop-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 5px;
    margin-right: 10px;
}

.shop-details {
    flex: 1;
}

.shop-name {
    font-size: 20px;
    font-weight: bold;
    color: #333;
}

.shop-rating {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #666;
}

.review-count {
    margin-left: 5px;
}

.address-icon {
    width: 20px;
    height: 20px;
    margin-left: 5px;
    cursor: pointer;
}

.item-images {
    display: flex;
    margin: 5px 0;
    justify-content: flex-start;
}

.item-image {
    width: 100px;
    height: 100px;
    border-radius: 5px;
    margin-right: 5px;
}

.item-name {
    font-size: 14px;
    color: #333;
    margin-top: 5px;
}

.no-results {
    text-align: center;
    color: #999;
    margin-top: 20px;
} 
.suggestions-container {
    background-color: #fff;
    /* 建议项背景颜色 */
    border: 1px solid #ccc;
    /* 边框 */
    border-radius: 5px;
    /* 圆角 */
}

.suggestion-item {
    padding: 10px;
    /* 内边距 */
    cursor: pointer;
    /* 鼠标指针样式 */
}

.suggestion-item:hover {
    background-color: #f0f0f0;
    /* 悬停时的背景颜色 */
}

.overlay {
    position: fixed;
    /* 固定定位 */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    /* 半透明白色 */
    z-index: 999;
    /* 确保在其他元素之上 */
}

.suggestions-overlay {
    position: absolute;
    /* 绝对定位 */
    top: 60px;
    /* 根据输入框的位置调整 */
    left: 0;
    right: 0;
    z-index: 1000;
    /* 确保在其他元素之上 */
}

.suggestions-scroll {
    max-height: 200px; /* 设置最大高度，超过时可滚动 */
    overflow-y: auto; /* 允许垂直滚动 */
}