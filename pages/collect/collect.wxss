.container {
  padding: 0;
  background: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 40rpx;
  color: #ff6b00;
  border: 2rpx solid #ff6b00;
  border-radius: 50%;
}

.folder-item {
  margin-bottom: 2rpx;
  background: #fff;
}

.folder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.folder-left {
  display: flex;
  align-items: center;
}

.folder-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.folder-name {
  font-size: 32rpx;
  color: #333;
}

.folder-right {
  display: flex;
  align-items: center;
}

.more-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotate(45deg);
  transition: transform 0.3s;
}

.arrow-down {
  transform: rotate(225deg);
}

.folder-content {
  display: none;
  padding: 20rpx;
  background: #f5f5f5;
}

.folder-content.show {
  display: block;
}

.file-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.file-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.file-info {
  flex: 1;
  min-width: 0;
}

.file-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #ff6b00;
  background: rgba(255,107,0,0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.location {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 24rpx;
  color: #999;
  max-width: 160rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
}
