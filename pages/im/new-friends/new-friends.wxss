.container {
    min-height: 100vh;
    background: #f7f7f7;
    padding-bottom: 40rpx;
}

/* 搜索区域样式 */
.search-area {
    padding: 20rpx 30rpx;
    background: #fff;
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 100;
}

.search-box {
    flex: 1;
    height: 72rpx;
    background: #f5f5f5;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    margin-right: 20rpx;
}

.search-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.search-input {
    flex: 1;
    height: 72rpx;
    font-size: 28rpx;
}

.search-placeholder {
    color: #999;
}

.qr-icon {
    width: 48rpx;
    height: 48rpx;
    padding: 10rpx;
}

/* 好友列表样式 */
.friend-list {
    padding: 0 30rpx;
}

.time-title {
    font-size: 24rpx;
    color: #999;
    padding: 20rpx 0;
}

.friend-group {
    background: #fff;
    border-radius: 12rpx;
    overflow: hidden;
}

.friend-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.friend-item:last-child {
    border-bottom: none;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}

.info {
    flex: 1;
}

.name {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 6rpx;
}

.remark {
    font-size: 26rpx;
    color: #999;
}

.agree-btn {
    min-width: 120rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #fff5e5;
    color: #ff9500;
    font-size: 26rpx;
    border-radius: 28rpx;
    padding: 0 24rpx;
    border: none;
    flex:0.1
}

.agree-btn::after {
    border: none;
}

.agree-btn.agreed {
    background: #f5f5f5;
    color: #999;
}
