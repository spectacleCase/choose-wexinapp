.side-tabbar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 280rpx;
  height: 100%;
  background-color: #FDFDFE;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f0f0; /* 添加底部边框 */
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%; 
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-left: 20rpx; /* 添加左边距 */
}

.side-tabbar {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 0 20rpx;
}

.tab-items {
  flex: 1;
  padding-top: 20rpx;
}

.tab-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active::before {
  content: '';
  position: absolute;
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background-color: #ff9900;
  border-radius: 0 3rpx 3rpx 0;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tab-text {
  transition: color 0.3s ease;
}

.tab-item.active .tab-text {
  color: #ff9900;
  font-weight: 500;
}
