@import "../../pages/index/index.wxss";
.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.page-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  z-index: 2;
  transition: transform 0.3s ease;
  box-shadow: -5rpx 0 15rpx rgba(0, 0, 0, 0.1);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.icon-button {
  background: none;
  border: none;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  line-height: 1;
  color: #333;
  min-height: auto;
  width: auto;
}


.notification-button {
  margin-left: auto;
}

.main-content {
  height: calc(100% - 60rpx);
  overflow-y: auto;
}

.page-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.page {
  position: absolute;
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease-out;
}

.page-enter {
  transform: translateY(-100%);
}

.page-enter-active {
  transform: translateY(0);
}

.page-exit {
  transform: translateY(0);
}

.page-exit-active {
  transform: translateY(100%);
}
