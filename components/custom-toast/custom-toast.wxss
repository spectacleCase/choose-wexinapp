.custom-toast {
  position: fixed;
  top: 80rpx;
  right: -300rpx;
  background-color: rgba(255, 255, 255, 0.95);
  color: #333;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 9999;
  transition: all 0.3s ease;
  max-width: 80%;
  opacity: 0;
}

.custom-toast.show {
  right: 20rpx;
  opacity: 1;
}

.toast-content {
  display: flex;
  align-items: center;
}

.toast-content icon {
  margin-right: 16rpx;
  flex-shrink: 0;
}

.toast-content text {
  font-size: 28rpx;
  line-height: 1.4;
}

.toast-content.success {
  color: #4caf50;
}

.toast-content.error {
  color: #f44336;
}

.toast-content.info {
  color: #2196f3;
}
